<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:text="BOOK NAME"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="23dp" />

            <EditText
                android:id="@+id/bnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bookName"
                android:layout_below="@+id/bookName"
                android:ems="10"
                android:hint="Which book you got?"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/bookName" />

            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bnText"
                android:layout_below="@+id/bnText"
                android:text="AUTHOR NAME"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/bnText" />

            <EditText
                android:id="@+id/anText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/authorName"
                android:layout_below="@+id/authorName"
                android:ems="10"
                android:hint="Tell us the Author!"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/authorName" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/anText"
                android:layout_below="@+id/anText"
                android:text="RENT/WEEK"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/anText" />

            <EditText
                android:id="@+id/rText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rent"
                android:layout_below="@+id/rent"
                android:ems="10"
                android:hint="Expected amount"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/rent" />

            <TextView
                android:id="@+id/contactPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rText"
                android:layout_below="@+id/rText"
                android:text="CONTACT PERSON"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/rText" />

            <EditText
                android:id="@+id/cpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/contactPerson"
                android:layout_below="@+id/contactPerson"
                android:ems="10"
                android:hint="Your name"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/contactPerson" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cpText"
                android:layout_below="@+id/cpText"
                android:text="E-MAIL ADDRESS"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/cpText" />

            <EditText
                android:id="@+id/cnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/contact"
                android:layout_below="@+id/contact"
                android:ems="10"
                android:hint="Your contact details"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/contact" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/oval"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_done_white_24dp"
                android:layout_below="@id/oInfText"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cnText"
                android:layout_below="@+id/cnText"
                android:text="LOCATION"
                android:textSize="15sp"
                tools:text="LOCATION"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/cnText" />

            <EditText
                android:id="@+id/locText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/location"
                android:layout_below="@+id/location"
                android:ems="10"
                android:hint="Area of book availability"
                android:inputType="textMultiLine"
                android:layout_alignLeft="@+id/location" />

            <Button
                android:id="@+id/getLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locText"
                android:layout_alignLeft="@+id/locText"
                android:layout_alignStart="@+id/locText"
                android:background="@color/colorPrimaryLight"
                android:text="CHOOSE"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/otherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/locText"
                android:layout_below="@+id/getLoc"
                android:text="OTHER INFORMATION"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/locText" />

            <EditText
                android:id="@+id/oInfText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/otherInfo"
                android:layout_alignStart="@+id/otherInfo"
                android:layout_below="@+id/otherInfo"
                android:ems="10"
                android:hint="Optional details"
                android:inputType="textMultiLine" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>