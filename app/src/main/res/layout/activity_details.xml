<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:elevation="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ToggleButton
                android:id="@+id/togglebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textNIcons"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:fontFamily="@font/courgette"
                android:textOff="Lended"
                android:textOn="Available"
                android:layout_below="@id/app_bar"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/togglebutton"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Tap above to change book status"
                android:textSize="15sp"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:id="@+id/coverpage"
                android:src="@drawable/books"/>

            <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/coverpage"
                android:text="--"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bookName"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="--"
                android:textColor="#990000"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rent"
                android:id="@+id/description"
                android:layout_alignLeft="@+id/contactPerson"
                android:layout_alignStart="@+id/contactPerson"
                android:layout_marginBottom="12dp"
                android:text="--"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contactPerson"
                android:layout_alignStart="@+id/contactPerson"
                android:layout_below="@+id/author"
                android:layout_marginBottom="12dp"
                android:text="--"
                android:textColor="#996600"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contactPerson"
                android:layout_alignStart="@+id/contactPerson"
                android:layout_below="@+id/description"
                android:layout_marginBottom="12dp"
                android:text="--"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/author"
                android:layout_alignStart="@+id/author"
                android:layout_below="@id/contactPerson"
                android:layout_marginBottom="12dp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:text="1234512345"
                android:textColorLink="#00F"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/contactPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contact"
                android:layout_alignStart="@+id/contact"
                android:layout_below="@+id/location"
                android:text="--"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/otherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contactPerson"
                android:layout_alignStart="@+id/contactPerson"
                android:layout_below="@+id/contact"
                android:layout_marginBottom="12dp"
                android:text="--"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/otherInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:padding="20dp">

                <Button
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="Edit"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@id/editBtn"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:text="Delete"
                    android:textColor="@android:color/white"
                    android:visibility="invisible" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</android.support.v7.widget.CardView>
</LinearLayout>
